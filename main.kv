BoxLayout:
    spacing: dp(20)
    pos_hint: {"center_x": .5, "center_y": .5}
    orientation: 'vertical'
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 1
        MDFillRoundFlatIconButton:
            id: back_button
            size_hint: [0.2, 1]
            icon: 'arrow-left'
            text: 'Назад'
            on_release:
                app.back()
        AsyncImage:
            id: image
            size_hint: [1, 1]
        MDFillRoundFlatIconButton:
            size_hint: [0.2, 1]
            icon: 'arrow-right'
            text: 'Пропуск'
            on_release:
                app.advance()
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 0.1
        size_hint_x: 0.75
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-1-box-outline'
            text: 'RM'
            on_release:
                app.action('1')
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-2-box-outline'
            text: 'Suga'
            on_release:
                app.action('2')
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-3-box-outline'
            text: 'J-Hope'
            on_release:
                app.action('3')
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 0.1
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-4-box-outline'
            text: 'Jin'
            on_release:
                app.action('4')
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-5-box-outline'
            text: 'V'
            on_release:
                app.action('5')
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-6-box-outline'
            text: 'Jimin'
            on_release:
                app.action('6')
        MDFillRoundFlatIconButton:
            size_hint: [1, 1]
            icon: 'numeric-7-box-outline'
            text: 'Jungkook'
            on_release:
                app.action('7')
