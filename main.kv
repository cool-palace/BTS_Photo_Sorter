BoxLayout:
    spacing: dp(20)
    pos_hint: {"center_x": .5, "center_y": .5}
    orientation: 'vertical'
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 1
        MDFillRoundFlatIconButton:
            id: back_button
            size_hint: [0.2, 1]
            icon: 'arrow-left'
            text: 'Назад'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.back()
        AsyncImage:
            id: image
            size_hint: [1, 1]
        MDFillRoundFlatIconButton:
            size_hint: [0.2, 1]
            icon: 'arrow-right'
            text: 'Пропуск'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.advance()
    MDSlider:
        id: slider
        min: 0
        max: 0
        step: 1
        orientation: 'horizontal'
        size_hint_y: 0.01
        color: 'green'
        value_track: True
        value_track_color: [0, 1, 0, 1]
        hint_bg_color: 'black'
        hint_text_color: 'white'
        on_value: app.set_index(*args)
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 0.1
        size_hint_x: 0.75
        MDFillRoundFlatIconButton:
            id: rm
            size_hint: [1, 1]
            icon: 'numeric-1-box-outline'
            text: 'RM'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('1')
        MDFillRoundFlatIconButton:
            id: suga
            size_hint: [1, 1]
            icon: 'numeric-2-box-outline'
            text: 'Suga'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('2')
        MDFillRoundFlatIconButton:
            id: jhope
            size_hint: [1, 1]
            icon: 'numeric-3-box-outline'
            text: 'J-Hope'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('3')
    BoxLayout:
        spacing: dp(20)
        pos_hint: {"center_x": .5, "center_y": .5}
        orientation: 'horizontal'
        size_hint_y: 0.1
        MDFillRoundFlatIconButton:
            id: jin
            size_hint: [1, 1]
            icon: 'numeric-4-box-outline'
            text: 'Jin'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('4')
        MDFillRoundFlatIconButton:
            id: v
            size_hint: [1, 1]
            icon: 'numeric-5-box-outline'
            text: 'V'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('5')
        MDFillRoundFlatIconButton:
            id: jimin
            size_hint: [1, 1]
            icon: 'numeric-6-box-outline'
            text: 'Jimin'
            md_bg_color: app.theme_cls.primary_dark
            on_release:
                app.action('6')
        MDFillRoundFlatIconButton:
            id: jk
            size_hint: [1, 1]
            icon: 'numeric-7-box-outline'
            text: 'Jungkook'
            md_bg_color: app.theme_cls.primary_dark
